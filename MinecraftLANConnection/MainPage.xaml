<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MinecraftLANConnection.MainPage">

    <ScrollView>

        <StackLayout Margin="20"
                     Orientation="Horizontal">

            <Button Text="Connect"
                    WidthRequest="100"
                    HeightRequest="30"
                    VerticalOptions="Start"/>

            <StackLayout Orientation="Vertical"
                         Margin="10">

                <Label Text="dada"/>

                <Label Text="{Binding Source={StaticResource Locator}, Path=MainViewModel.User.Name}"/>
    
                <Label Text="{Binding Source={StaticResource Locator}, Path=MainViewModel.User.Ip}"/>

            </StackLayout>

         </StackLayout>

    </ScrollView>

</ContentPage>

